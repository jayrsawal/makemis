@using makemis.Models;
@using makemis.Common;
@{
    var blogs = (BlogListModel)ViewBag.BlogListModel;
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model makemis.Models.BlogModel
<div class="row content-box">
    <div class="col-sm-12 col-lg-12 header-title">
        <h1>Dashboard</h1>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6 col-lg-offset-3 col-lg-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-lg-12 text-center header-title-caption">
                Manage Existing Posts
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Nav</th>
                        <th>Active</th>
                        <th>Publish Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (BlogModel blog in blogs.BlogList) {
                        <tr>
                            <td>@blog.Title</td>
                            <td>@blog.BlogType</td>
                            @if (blog.Nav) {
                                <td>Yes</td>
                            } else {
                                <td>No</td>
                            }
                            @if (blog.Active) {
                                <td>Yes</td>
                            } else {
                                <td>No</td>
                            }
                            <td>@blog.PublishDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (blog.Active) {
                                    <a href="@Url.Action("Service","Main", new { blogid = blog.Id, service = "deactivate" })">Deactivate</a><br />
                                } else {
                                    <a href="@Url.Action("Service","Main", new { blogid = blog.Id, service = "activate" }) ">Activate</a><br />
                                }
                                @if (blog.Nav) {
                                    <a href="@Url.Action("Service","Main", new { blogid = blog.Id, service = "removenav" }) ">Remove from Nav</a><br />
                                } else {
                                    <a href="@Url.Action("Service","Main", new { blogid = blog.Id, service = "addnav" }) ">Add to Nav</a><br />
                                }
                                <a href="@Url.Action("Service","Main", new { blogid = blog.Id, service = "delete" }) ">Delete</a><br />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="col-sm-12 col-lg-12 header-title">
        <h1>Post New Blog</h1>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6 col-lg-offset-3 col-lg-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-lg-12 text-center header-title-caption">
                Add a new post here
            </div>
        </div>
    </div>
    @if (Html.ValidationSummary(true) != null && !Html.ValidationSummary().ToString().Contains("none")) {
        <div class="row">
            <div class="col-sm-8">
                @Html.ValidationSummary(true)
            </div>
        </div>
    }
    <br />
    <br />
    @using (Html.BeginForm()) {
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-4 col-lg-4">
                Post Type:<select class="form-control" name="blogtypeid" id="blogtypeid">
                    <option value="82914174-79e3-e611-80d0-001c42c065e7">Publication</option>
                    <option value="83914174-79e3-e611-80d0-001c42c065e7">Application</option>
                </select>
            </div>
            <div class="col-sm-2 col-lg-2">
                Active: <input type="checkbox" class="form-control" name="active" id="active" />
            </div>
            <div class="col-sm-2 col-lg-2">
                On Navbar: <input type="checkbox" class="form-control" name="active" id="active" />
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                Navigation Title:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input type="text" class="form-control" id="navtitle" name="navtitle" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                Title:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input type="text" id="title" name="title" class="form-control input-validation-error text-box single-line" data-val-required="The Title field is required." data-val="true"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                Caption:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input type="text" class="form-control" id="caption" name="caption" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                URL:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input class="form-control" id="url" name="url" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                HTML:
            </div>
            <div class="col-sm-6 col-lg-6">
                <textarea id="html" name="html" style="min-height:300px" class="form-control input-validation-error text-box single-line" data-val-required="HTML required." data-val="true"></textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                Publish Date:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input type="date" class="form-control datepicker" id="publishdate" name="publishdate" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-lg-offset-1 col-sm-2 col-lg-2">
                Image Path:
            </div>
            <div class="col-sm-4 col-lg-4">
                <input type="text" class="form-control" id="imgpath" name="imgpath" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-offset-3 col-lg-offset-3 col-sm-2 col-lg-2">
                <input type="submit" class="btn btn-default" value="Submit Post" />
            </div>
        </div>
    }
</div>