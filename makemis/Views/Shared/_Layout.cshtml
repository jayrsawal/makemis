<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Page - @ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/css")

    <script>
        var strPath = @Html.Raw(Json.Encode(@ViewBag.Path));
    </script>
</head>
<body>
    <div class="jumbotron">
        <div class="container">
            <div class="col-sm-12 vertical-align">
                <h2>Mariana Akemi</h2>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mariana Shimabukuro", "Index", "Main", new { area = "" }, new { @class = "navbar-brand", @id = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Research", "Index", "Main")</li>
                    <li>@Html.ActionLink("Curriculum Vitae", "Index", "Main")</li>
                    <li>@Html.ActionLink("Blog", "Index", "Main")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container container-table body-content center-content">
        @RenderBody()
    </div>
    <div id="snacks"></div>
    <footer class="footer">
        <div class="container center-content text-muted">Copyright © 2017 <a href="">Mariana Shimabukuro</a>. All Rights Reserved.</div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
